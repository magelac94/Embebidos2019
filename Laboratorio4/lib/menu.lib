/*** BeginHeader enviar_a_ui */
void enviar_a_ui(enum tipoUI interfazAUsar, char *bufferText, tcp_Socket *echo_socket );
/*** EndHeader */
void enviar_a_ui(enum tipoUI interfazAUsar, char *bufferText, tcp_Socket *echo_socket ){

	switch(interfazAUsar){
		case( CONSOLA ):
			printf( "%s", bufferText );
			break;

		case ( TCP ):
			sock_puts( &echo_socket, bufferText );
			break;

		default:
			printf( "ERROR DE SISTEMA: No existe la interfazAUsar elegida. Vea funcion enviar_a_ui" ); //EL ERROR SOLO SALE EN LA CONSOLA
			break;
	}
}


/*** BeginHeader obtener_de_ui */
void obtener_de_ui( enum tipoUI interfazAUsar, char *temp, tcp_Socket *echo_socket, char* buffer );
/*** EndHeader */
void obtener_de_ui( enum tipoUI interfazAUsar, char *temp, tcp_Socket *echo_socket, char* buffer ){
	int status;
	switch( interfazAUsar ){
		case( CONSOLA ):
		 //	*temp = getchar();    // espero valor
			gets(temp);
			printf("\n NUMERO INGRESADO   .....>  %s\n",temp );
			break;

		case ( TCP ):
			//sock_wait_input(&mi_socket_tcp,0,NULL,&status);
			if(sock_gets( &echo_socket, buffer, 2048 ))
			{
				sock_puts( &echo_socket, buffer );
			}

			sock_err:
         	switch(status){
            	case 1: // foreign host closed
						printf("User closed session\n");
						break;
					case -1: // time-out
						printf("Connection timed out\n");
						break;
            }
			break;

		default:
			printf( "ERROR DE SISTEMA: No existe la interfazAUsar elegida. Vea funcion obtener_de_ui" ); //aca hay que manejar bien lo que pasa al fallar
			break;
	}
}



